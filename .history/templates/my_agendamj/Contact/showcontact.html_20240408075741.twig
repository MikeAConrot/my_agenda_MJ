{% extends 'base.html.twig' %}
{% block title_name %}
     AGENDA 2024
{% endblock %}
{% block header %}
    <h1>CONTACTS</h1>
{% endblock %}
 
{% block content  %}
  
    <table>
        <thead>
            <tr>
                <th>Nombre Completo</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for contac in contacts    %}
                <tr>
                    <td>{{ contac.name }} {{ contac.lastName }}</td>
                    <td>{{ contac.mail }}</td>
                    <td>
                        <a name="" id="" class="btn btn-primary" href="{{path('edit_contacts',{'idContact':contac.id })}}" role="button">Edit Contact</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}